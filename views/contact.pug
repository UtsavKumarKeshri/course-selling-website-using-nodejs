extends base.pug
block style 
    style
        include ../static/style.css
        include ../static/contactPageStyle.css
block content 
    div.formContainer
        form(action="/contact", method="post", class = "contactForm") 
            label.lbl(for="name") First Name: 
                input(type = "text", class = "form" name = "First_Name", placeholder = "Enter Your Name")
                label.lbl(for="name") Last Name: 
                input(type = "text", class = "form" name = "Last_Name", placeholder = "Enter Your Name")
            label.lbl(for="mob") Phone:
                input(type = "number", class = "form", name = "mobile", placeholder = "Enter Your Mobile Number", min="1", max="9999999999")
                label.lbl(for="name") Email: 
                input(type = "text", class = "form", name = "Email", placeholder = "Enter Your E-Mail address")
            label.lbl(for="name") State:
                select(name="state" class = "state")
                    each state in ["Select", "Andhra Pradesh", "Arunachal Pradesh", "Assam", "Bihar", "Chhattisgarh", "Goa", "Gujarat", "Haryana", "Himachal Pradesh", "Jharkhand", "Karnataka", "Kerala", "Madhya Pradesh", "Maharashtra", "Manipur", "Meghalaya", "Mizoram", "Nagaland", "Odisha", "Punjab", "Rajasthan", "Sikkim", "Tamil Nadu", "Telangana", "Tripura", "Uttar Pradesh", "Uttarakhand", "West Bengal"]
                        option= state
                label.lbl(for="name") District:
                input(type = "text", class = "form", name = "District", placeholder = "Enter Your District")
            label.lbl(for="name") Your Message
            textarea.message(name="message" cols="40" rows="5")
            button(class="submitContactPage")
                |   Submit 
